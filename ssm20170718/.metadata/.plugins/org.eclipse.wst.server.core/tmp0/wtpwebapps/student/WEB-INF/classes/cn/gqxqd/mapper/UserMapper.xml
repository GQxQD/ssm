<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gqxqd.mapper.UserMapper">
	<select id="findUser" parameterType="cn.gqxqd.entity.User" resultType="cn.gqxqd.entity.User">
		select * from user where 1=1
		<if test="uid!=null">
			and uid = #{uid}
		</if>
		<if test="username!=null">
			and username = #{username}
		</if>
		<if test="password!=null">
			and password = #{password}
		</if>
	</select>
	<insert id="saveUser" parameterType="cn.gqxqd.entity.User" useGeneratedKeys="true" keyProperty="uid">
		insert into user(uid,username,password,gender,birthday,email,phone)
		values(#{uid},#{username},#{password},#{gender},#{birthday},#{email},#{phone})
	</insert>
</mapper>
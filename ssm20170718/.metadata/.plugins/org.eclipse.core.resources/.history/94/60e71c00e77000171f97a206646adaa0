<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.gqxqd.mapper.StudentMapper">
	<select id="findAll" resultType="cn.gqxqd.entity.Student">
		select * from student
	</select>
	<select id="findStudent" parameterType="cn.gqxqd.entity.Student" resultType="cn.gqxqd.entity.Student">
		select * from student where 1=1
		<if test="name!=null">
			and name = #{name}
		</if>
		<if test="password!=null">
			and password = #{password}
		</if>
	</select>
	<select id="get" parameterType="int" resultType="cn.gqxqd.entity.Student">
		select * from student where id=#{id}
	</select>
	<insert id="saveStudent" parameterType="cn.gqxqd.entity.Student" useGeneratedKeys="true" keyProperty="id">
		insert into student(id,name,password,age,gender,email,phone,create_time)
		values(${id},${name},${password},${age},${gender},${email},${phone},${create_time})
	</insert>
</mapper>